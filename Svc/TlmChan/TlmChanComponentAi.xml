<?xml version="1.0" encoding="UTF-8"?>
<?oxygen RNGSchema="file:../xml/ISF_Component_Schema.rnc" type="compact"?>

<component name="TlmChan" kind="active" namespace="Svc">
    <import_port_type>Fw/Tlm/TlmPortAi.xml</import_port_type>
    <import_port_type>Fw/Com/ComPortAi.xml</import_port_type>
    <import_port_type>Svc/Sched/SchedPortAi.xml</import_port_type>
    <import_port_type>Svc/Ping/PingPortAi.xml</import_port_type>
    <import_port_type>Fw/Time/TimePortAi.xml</import_port_type>
    <import_port_type>Fw/Time/TimePortAi.xml</import_port_type>

    <comment>A component for storing telemetry</comment>
    <ports>
        <port name="Time" kind="output" data_type="Fw::Time" max_number="1" role="TimeGet"/>
        <port name="TlmRecv" data_type="Fw::Tlm" kind="guarded_input" >
            <comment>
            Telemetry input port
            </comment>
        </port>
        <port name="TlmGet" data_type="Fw::Tlm" kind="guarded_input" >
            <comment>
            Telemetry input port
            </comment>
        </port>
        <port name="Run" data_type="Svc::Sched" kind="async_input" >
            <comment>
            Run port for starting packet send cycle
            </comment>
        </port>
        <port name="PktSend" data_type="Fw::Com" kind="output" >
            <comment>
            Packet send port
            </comment>
        </port>
        <port name="pingIn" data_type="Svc::Ping" kind="async_input"  max_number = "1">
            <comment>
            Ping input port
            </comment>
        </port>
        <port name="pingOut" data_type="Svc::Ping" kind="output"  max_number = "1">
            <comment>
            Ping output port
            </comment>
        </port>
    </ports>
    <commands>
        <command kind="async" opcode="0" mnemonic="DUMP_CHANNEL">
            <comment>
            Dump a specific channel
            </comment>
            <args>
                <arg name="id" type="U8" comment="Channel id to dump">
                </arg>
            </args>
        </command>
    </commands>

    <events>
        <event id="0" name="TLM_NOT_UPDATED" severity="WARNING_LO" format_string = "Channel 0x%.2X has never been updated" >
            <comment>
                Throw by DUMP_CHANNEL command when channel is not available
            </comment>
            <args>
                <arg name="id" type="U8">
                    <comment>Channel id</comment>
                </arg>          
            </args>
        </event>
     </events>
</component>

